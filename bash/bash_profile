
#Add user specific profile
#Those aliases which are specific for users directory tree
source ~/.bash_profile_user

export VISUAL=nvim
export EDITOR="$VISUAL"

alias zrc="vim ~/.zshrc"
alias vrc="vim ~/.config/nvim/init.vim"
alias rebash="source ~/.bash_profile"
alias vbash="vim ~/.bash_profile"
alias vbuser="vim ~/.bash_profile_user"
alias glr="git pull --rebase"
alias gud="git fetch origin develop:develop"
alias gum="git fetch origin master:master"
alias gds="git diff --staged"
alias grc="git rebase --continue"

alias hide="chflags hidden"
alias unhide="chflags nohidden"
export CLICOLOR=1
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

export FZF_DEFAULT_COMMAND="rg --files --hidden -g '!.git'"

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
