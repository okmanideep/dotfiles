{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#3599EB",
          "foreground": "#ffffff",
          "leading_diamond": "",
          "properties": {
            "style": "agnoster_short",
            "max_depth": 2,
            "hide_root_location": true,
            "folder_separator_icon": "/"
          },
          "style": "diamond",
          "template": "  {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#80B55A",
          "foreground": "#ffffff",
          "powerline_symbol": "",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#DAA544{{ end }}"
          ],
          "properties": {
            "branch_icon": "",
            "fetch_stash_count": false,
            "fetch_status": true,
            "fetch_upstream_icon": false
          },
          "style": "powerline",
          "template": "  {{ .HEAD }}{{ if or (.Working.Changed) (.Staging.Changed) }} ﰣ{{ end }}{{ if gt .Ahead 0}} {{ end }}{{ if gt .Behind 0}} {{ end }}{{ if gt .StashCount 0 }} {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#D74551",
          "foreground": "#ffffff",
          "powerline_symbol": "",
          "style": "powerline",
          "template": "  {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        },
        {
          "background": "#D74551",
          "foreground": "#ffffff",
          "powerline_symbol": "",
          "properties": {
            "display_mode": "files"
          },
          "style": "powerline",
          "template": "  {{ .Major }} ",
          "type": "java"
        },
        {
          "background": "#3599EB",
          "foreground": "#ffffff",
          "style": "diamond",
          "trailing_diamond": "",
          "background_templates": [
            "{{ if .Root }}#8D97A9{{ end }}"
          ],
          "template": " {{ if .Root }}#{{ else }}{{ end }} ",
          "type": "session"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
